{
  "compilerOptions": {

    "target": "es2022",
    "lib": [
      "es2022",
      "DOM"
    ], 
    "jsx": "preserve", 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,  
    "useDefineForClassFields": false,
    "module": "commonjs", 
    "allowImportingTsExtensions": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "baseUrl": "./packages",
    "paths": {
      "@labir/core": [
        "core/src"
      ],
      "@labir/react-bridge": [
        "react-bridge/src"
      ],
      "@labir/emotion": [
        "emotion/src"
      ]
    },
    "types": [
      // "src/types.d.ts"
    ]
  },
  "exclude": [
    "dist",
    "src/index.ts"
  ]
}