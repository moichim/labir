# Blokuje přímé spouštění PHP skriptů
<FilesMatch "\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blokuje přímý přístup k JSON souborům
<FilesMatch "\.json$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Povolit pouze PNG a LRC soubory
<FilesMatch "\.(png|lrc)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Výchozí: vše ostatní zakázáno
<Files *>
    Order allow,deny
    Deny from all
</Files>
